<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="Atualizar Jogos"
        android:textAlignment="center"
        android:textSize="30sp"

        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/tvID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="50sp"
        android:hint="Digite o ID a ser alterado:"
        android:clickable="true"
        android:inputType="text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 çÇãÃõÕáÁéÉíÍóÓúÚâÂêÊîÎôÔûÛàÀèÈìÌòÒùÙäÄëËïÏöÖüÜÿŸ"
        android:backgroundTint="@android:color/white"
        tools:ignore="HardcodedText"
        android:autofillHints="" />

    <EditText
        android:id="@+id/tvNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="20sp"
        android:hint="Nome Do jogo:"
        android:clickable="true"
        android:inputType="text"
        android:backgroundTint="@android:color/white"
        android:autofillHints=""
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/tvclassificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="20sp"
        android:hint="Classificação:"
        android:clickable="true"
        android:inputType="text"
        android:backgroundTint="@android:color/white"
        android:autofillHints=""
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/tvdescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="20sp"
        android:hint="Descrição:"
        android:clickable="true"
        android:inputType="text"
        android:backgroundTint="@android:color/white"
        android:autofillHints=""
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/tvAdicionarURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="20sp"
        android:hint="Adicione uma URL aqui:"
        android:clickable="true"
        android:inputType="text"
        android:backgroundTint="@android:color/white"
        android:autofillHints=""
        tools:ignore="HardcodedText,TextFields" />

    <Button
        android:id="@+id/tvButtonConfirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:textSize="25sp"
        android:text="Confirmar"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/tvButtonVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:textSize="25sp"
        android:text="Voltar"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />
</LinearLayout>


</ScrollView>